<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_wpp2_0">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_wpp45_0"
        android:layout_height="@dimen/_wpp55_0"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/remove_image"
        android:layout_width="@dimen/_wpp5_0"
        android:layout_height="@dimen/_wpp5_0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_wpp1_0"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>