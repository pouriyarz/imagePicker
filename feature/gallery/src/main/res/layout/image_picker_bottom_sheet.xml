<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_wpp10_0">

    <LinearLayout
        android:id="@+id/camera_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/_wpp40_0"
            android:layout_height="@dimen/_wpp18_0"
            android:layout_marginTop="@dimen/_wpp2_0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_add_video" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/camera"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/_wpp40_0"
            android:layout_height="@dimen/_wpp21_0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_add_static" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/gallery"
            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>


